  <div class="control-group">
      <div class="login-con">
        <h4 class = "header-login">VENDOR DETAILS</h4>
          <%= form_for @vendor , :html => { :multipart => true, :class => "form-signin" } do |f| %>

          <%= f.label :name, :class => "sr-only" %>
          <%= f.text_field :name, :class =>"form-control", :placeholder =>"Name of Vendor" %>
    
          <%= f.label :address, :class => "sr-only" %>
          <%= f.text_field :address, :class =>"form-control", :placeholder =>"Vendor Address" %>
     
          <%= f.label :telno, :class => "sr-only" %>
          <%= f.text_field :telno, :class =>"form-control", :placeholder =>"contact no." %>
         
          <%= f.label :type ,:class => "sr-only" %>
          <%= f.text_field :type, :class =>"form-control", :placeholder =>"Vendor products" %>
       
          <%= f.label :image %>
          <%= f.file_field :image, :class =>"form-control"%>

      <%= f.submit "HELP VENDOR", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
 
    </div>
      </div>
</div>